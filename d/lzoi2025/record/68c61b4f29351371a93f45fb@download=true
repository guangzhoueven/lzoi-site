#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

template<typename T>
struct segtree {
	vector<T> t;
	i64 n;
	segtree(i64 n_): n(n_) {
		t.assign(2 * n, 0);
	}

	void add(i64 p, T v) {
		for (t[p += n] += v; p >>= 1; ) t[p] = t[p << 1] + t[p << 1 | 1];
	}

	T query(i64 L, i64 R) {
		T ans = 0;
		for (L += n, R += n + 1; L < R; L >>= 1, R >>= 1) {
			if (L & 1) ans += t[L++];
			if (R & 1) ans += t[--R];
		}
		return ans;
	}
};

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n, m;
	cin >> n >> m;
	segtree<i64> seg(n);

	for (i64 i = 0; i < n; i++) {
		i64 x;
		cin >> x;
		seg.add(i, x);
	}

	while (m--) {
		i64 op, x, y;
		cin >> op >> x >> y;
		if (op == 1) seg.add(x - 1, y);
		else cout << seg.query(x - 1, y - 1) << '\n';
	}
	return 0;
}