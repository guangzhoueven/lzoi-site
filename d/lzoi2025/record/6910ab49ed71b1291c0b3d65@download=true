#include <bits/stdc++.h>
using namespace std;
using i64 = long long;
const i64 MOD = 998244353;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n, ans = 0;
	cin >> n;
	vector<i64> a(n);
	for (auto& x : a) cin >> x;
	for (i64 i = 0; i < n; i++)
		ans = (ans + a[i] * (i + 1LL) * (n - i)) % MOD;
	cout << ans << "\n";
	return 0;
}