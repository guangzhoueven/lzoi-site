#include <iostream>
using namespace std;

const int MOD = 998244353;

long long qpow(long long x, long long n, int mod) {
    long long res = 1;
    x %= mod;
    while (n > 0) {
        if (n % 2 == 1) {
            res = (res * x) % mod;
        }
        x = (x * x) % mod;
        n /= 2;
    }
    return res;
}

int main() {
    long long x, n;
    cin >> x >> n;
    
    if (x == 1) {
        cout << (n + 1) % MOD << endl;
    } else {
        long long num = (qpow(x, n + 1, MOD) - 1 + MOD) % MOD;
        long long inv = qpow(x - 1, MOD - 2, MOD);
        long long ans = (num * inv) % MOD;
        cout << ans << endl;
    }
    
    return 0;
}