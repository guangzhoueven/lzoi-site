#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int min_cnt(vector<i64>& coins, i64 target) {
	i64 i = 0, r = 0, cnt = 0;	// 最大金额r，添加硬币数cnt
	sort(coins.begin(), coins.end());
	
	while (r < target) {
		if (i < (i64)coins.size() && coins[i] <= r + 1) 
			r += coins[i++];
		else {
			cnt++;
			r += r + 1;	// r = r + r + 1
		}
	}
	return cnt;
}

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr),	cout.tie(nullptr);
	i64 n, target;
	cin >> n >> target;
	vector<i64> coins(n);
	for (i64 i = 0; i < n; i++) 
		cin >> coins[i];
	cout << min_cnt(coins, target) << "\n";
	return 0;
}