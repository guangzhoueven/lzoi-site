#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n;
	cin >> n;
	vector<i64> h(n + 2);
	for (i64 i = 1; i <= n; i++) cin >> h[i];

	h[0] = h[n + 1] = 0;
	vector<i64> st = {0};
	i64 ans = 0;

	for (i64 i = 1; i <= n + 1; i++) {
		while (h[st.back()] > h[i]) {
			i64 H = h[st.back()];
			st.pop_back();
			i64 W = i - st.back() - 1;
			ans = max(ans, H * W);
		}
		st.push_back(i);
	}
	cout << ans << "\n";
	return 0;
}