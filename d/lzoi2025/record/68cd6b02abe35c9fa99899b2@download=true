#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 N, V;
	cin >> N >> V;
	vector<i64> dp(V + 1, 0);
	for (i64 i = 0; i < N; i++) {
		i64 v, w;
		cin >> v >> w;
		for (i64 j = v; j <= V; j++) dp[j] = max(dp[j], dp[j - v] + w);
	}
	cout << dp[V] << "\n";
	return 0;
}