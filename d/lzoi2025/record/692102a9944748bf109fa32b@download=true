#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n, m, ans = 0;
	cin >> n >> m;
	vector<i64> a(n);
	for (i64 i = 0; i < n; i++) cin >> a[i];
	for (i64 i = 0; i < n - 1; i++) {
		for (i64 j = i + 1; j < n; j++) {
			if (a[i] + a[j] >= m) ans++;
		}
	}
	cout << ans << "\n";
	return 0;
}