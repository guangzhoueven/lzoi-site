#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n, m;
	cin >> n >> m;
	vector<i64> a(n);
	for (auto& x : a) cin >> x;

	i64 ans = 0, j = n - 1;
	for (i64 i = 0; i < n; i++) {
		while (j > i && a[i] + a[j] >= m) j--;
		if (j > i) ans += (n - 1 - j);
		else ans += (n - 1 - i);
	}
	cout << ans << "\n";
	return 0;
}