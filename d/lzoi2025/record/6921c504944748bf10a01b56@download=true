#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n, k, ans = 0, maxi = 0;
	string s;
	cin >> n >> k >> s;

	vector<i64> cnt(26, 0);	// 各个字符出现的次数
	for (i64 i = 0, r = -1; i < n; i++) {
		while (maxi < k && r + 1 < n) {
			maxi = max(maxi, ++cnt[s[++r] - 'a']);
		}
		if (maxi >= k) {
			ans += n - r;
			cnt[s[i] - 'a']--;
			if (s[i] == s[r]) maxi--;
		} else break;
	}
	cout << ans << "\n";
	return 0;
}