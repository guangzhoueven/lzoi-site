#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	i64 n;
	cin >> n;
	vector<i64> h(n), p;
	for (i64 i = 0; i < n; i++) cin >> h[i];

	auto ok = [&](i64 x) ->i64{
		i64 L = 0, R = p.size();
		while (L != R) {
			int mid = L + ((R - L) >> 1);
			if (p[mid] >= x) R = mid;
			else L = mid + 1;
		}
		return L;
	};

	for (i64 x : h) {
		i64 it = ok(x);
		if (it == (i64)p.size()) p.push_back(x);
		else p[it] = x;
	}
	cout << p.size() << '\n';
	return 0;
}