#include <bits/stdc++.h>
using namespace std;
using i64 = long long;
constexpr i64 MOD = 998244353;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n, l, r;
	cin >> n >> l >> r;

	vector<i64> dp(n + 1, 0);
	dp[0] = 1;
	for (i64 i = l; i <= r; i++) 
		for (i64 j = i; j <= n; j++) 
			dp[j] = (dp[j] + dp[j - i]) % MOD;
	
	cout << dp[n] << "\n";
	return 0;
}