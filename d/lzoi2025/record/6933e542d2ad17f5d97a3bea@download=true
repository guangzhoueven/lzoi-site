#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 T;
	cin >> T;
	while (T--) {
		i64 n, ans = 0;
		cin >> n;
		vector<i64> a(n + 1), p(n + 1);
		unordered_map<i64, i64> q;
		q[0] = 0;
		for (i64 i = 1; i <= n; i++) cin >> a[i];
		for (i64 i = 1; i <= n; i++) {
			p[i] = p[i - 1] + (a[i] == 1 ? 1 : -1);
			if (q.count(p[i])) ans = max(ans, i - q[p[i]]);
			if (!q.count(p[i])) q[p[i]] = i;
		}
		cout << ans << "\n";
	}
	return 0;
}