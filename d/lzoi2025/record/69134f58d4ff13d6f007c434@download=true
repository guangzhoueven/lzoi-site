#include <bits/stdc++.h>
using namespace std;
using i64 = long long;
const i64 MOD = 998244353;
const i64 N = 5e5+10;

i64 f[2][N], p[N];
i64 n, k, l, r;
i64 add(i64 x) {return x >= MOD ? x - MOD : x;}
i64 dec(i64 x) {return x < 0 ? x + MOD : x;}

i64 mod_pow(i64 a, i64 b) {
	i64 res = 1;
	for (; b; b >>= 1, a = a * a % MOD) if (b & 1) res = res * a % MOD;
	return res;
}

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	cin >> n >> k >> l >> r;
	
	i64 x = min(r + 1, max(l, (i64)sqrt(n)));
	i64 mx = x > r ? 0 : n / x;
	f[0][0] = 1;
	
	if ((i64)k * l > n) {cout << "0\n";return 0;}
	for (i64 i = l; i < x; ++i)
		for (i64 j = i; j <= n; ++j)
			f[0][j] = add(f[0][j] + f[0][j - i]);
	
	copy(f[0], f[0] + n + 1, p);
	
	for (i64 i = 1; i <= mx; ++i) {
		i64 cur = i & 1, prev = cur ^ 1;
		fill(f[cur], f[cur] + n + 1, 0);
		
		for (i64 j = x * i; j <= n; ++j) {
			f[cur][j] = add(f[cur][j - i] + f[prev][j - x]);
			if (j - r - i >= 0) f[cur][j] = dec(f[cur][j] - f[prev][j - r - i]);
			p[j] = add(p[j] + f[cur][j]);
		}
	}
	
	i64 tmp = 1;
	for (i64 base = p[n], t = MOD - 2; t; base = base * base % MOD, t >>= 1) 
		if (t & 1) tmp = tmp * base % MOD;
	
	i64 ans = 0;
	for (i64 i = l, t = k * l; i <= r && t <= n; ++i, t += k) ans = add(ans + p[n - t]);
	cout << ans * tmp % MOD << "\n";
	return 0;
}