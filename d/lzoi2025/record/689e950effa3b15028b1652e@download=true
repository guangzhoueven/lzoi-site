#include <bits/stdc++.h>
using namespace std;
int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	int T;
	cin >> T;
	while (T--) {
		int a, b;
		cin >> a >> b;
		vector<int> arr;
		if (a == b) arr = {a};
		else if (a < b) arr = {2 * a - b, a, b, b};
		else arr = {2 * b - a, 3 * a - 3 * b, b, b};
		cout << arr.size() << "\n";
		for (size_t i = 0; i < arr.size(); i++) {
			if (i > 0) cout << " ";
			cout << arr[i];
		}
		cout << "\n";
	}
	return 0;
}
