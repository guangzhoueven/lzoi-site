#include <iostream>
using namespace std;
struct Res {
	int tot;
	int lst;
};
Res calc(int n) {
	Res r{0, 0};
	int cnt = n;
	bool flg = false;

	while (cnt > 0) {
		r.tot++;
		if (cnt % 3 == 1 && !flg) {
			flg = true;
			r.lst = r.tot;
		}
		cnt = cnt % 3 == 0 ? cnt / 3 * 2 : cnt / 3 * 2 + (cnt % 3 - 1);
	}
	return r;
}
int main() {
	ios::sync_with_stdio(false);
	cin.tie(0);
	cout.tie(0);
	int n;
	cin >> n;
	Res ans = calc(n);
	cout << ans.tot << " " << ans.lst << "\n";
	return 0;
}