#include <bits/stdc++.h>
using namespace std;
using i64 = long long;
constexpr i64 MOD = 998244353;

inline i64 add(i64 x) {
	return x >= MOD ? x - MOD : x;
}
inline i64 dec(i64 x) {
	return x < 0 ? x + MOD : x;
}

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n, L, R;
	cin >> n >> L >> R;
	i64 B = sqrt(n);
	i64 x = min(R + 1, max(L, B));
	i64 mx = (x > R) ? 0 : n / x;

	vector<vector<i64>> f(2, vector<i64>(n + 1, 0));
	f[0][0] = 1;

	for (i64 i = L; i < x; i++)
		for (i64 j = i; j <= n; j++)
			f[0][j] = add(f[0][j] + f[0][j - i]);

	vector<i64> p = f[0];
	for (i64 k = 1; k <= mx; k++) {
		fill(f[k & 1].begin(), f[k & 1].end(), 0);
		for (i64 j = k * x; j <= n; j++) {
			f[k & 1][j] = add(f[k & 1][j - k] + f[(k & 1) ^ 1][j - x]);
			if (j - R - k >= 0)	f[k & 1][j] = dec(f[k & 1][j] - f[(k & 1) ^ 1][j - R - k]);
			p[j] = add(p[j] + f[k & 1][j]);
		}
	}
	cout << p[n] << "\n";
	return 0;
}