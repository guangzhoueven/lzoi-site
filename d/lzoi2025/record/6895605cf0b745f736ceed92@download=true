#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	int n, q;
	cin>>n>>q;
	priority_queue<int> a[n];
	while (q--) {
		int op, t, x;
		cin >> op;
		switch (op) {
			case 0: {
				cin >> t >> x;
				a[t].push(x);
				break;
			}
			case 1: {
				cin >> t;
				if (!a[t].empty()) cout << a[t].top() << "\n";
				break;
			}
			case 2: {
				cin >> t;
				if (!a[t].empty()) a[t].pop();
				break;
			}
		}
	}
	return 0;
}