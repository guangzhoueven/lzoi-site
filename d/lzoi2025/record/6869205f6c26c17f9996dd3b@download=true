#include <bits/stdc++.h>
using namespace std;
int main() {
	ios::sync_with_stdio(false);
	cin.tie(0);
	cout.tie(0);
	int n;
	cin >> n;
	vector<vector<int>> matrix(n, vector<int>(n, 0));
	int ds[4][2] = {{0, 1}, {1, 0}, {0, -1}, {-1, 0}}; // 右、下、左、上
	int cd = 0;
	int row = 0, col = 0;
	for (int num = 1; num <= n * n; ++num) {
		matrix[row][col] = num;
		int nextRow = row + ds[cd][0];
		int nextCol = col + ds[cd][1];
		if (nextRow < 0 || nextRow >= n || nextCol < 0 || nextCol >= n || matrix[nextRow][nextCol] != 0) {
			cd = (cd + 1) % 4;
			nextRow = row + ds[cd][0];
			nextCol = col + ds[cd][1];
		}
		row = nextRow;
		col = nextCol;
	}
	for (int i = 0; i < n; ++i) {
		for (int j = 0; j < n; ++j) {
			cout << matrix[i][j];
			if (j < n - 1) {
				cout << " ";
			}
		}
		cout << "\n";
	}
	return 0;
}