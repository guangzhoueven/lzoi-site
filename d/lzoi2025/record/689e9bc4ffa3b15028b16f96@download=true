#include <bits/stdc++.h>
using namespace std;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	int T;
	cin >> T;
	while (T--) {
		int n, k;
		cin >> n >> k;
		vector<int> a(n), b(n);
		for (int i = 0; i < n; i++) cin >> a[i];
		for (int i = 0; i < n; i++) cin >> b[i];
		sort(a.begin(), a.end());
		sort(b.begin(), b.end());

		bool v = true;
		if (k == 0) {
			for (int i = 0; i < n; i++) {
				if (a[i] != b[i]) {
					v = false;
					break;
				}
			}
		} else {
			for (int i = 0; i < n; i++) {
				int ai = a[i], bi = b[i];
				if (ai == bi) continue;
				if(ai + k == bi || ai == bi + k) {v=true;continue;}
				if(abs(ai -k) == bi || ai == abs(bi - k) ||abs(ai +k) == bi || ai == abs(bi + k) ) {v=true;continue;}
				else v = false;
			}
		}
		cout << (v ? "YES" : "NO") << "\n";
	}
	return 0;
}
