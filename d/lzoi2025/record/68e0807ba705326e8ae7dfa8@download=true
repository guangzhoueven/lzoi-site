#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

i64 solve(i64 n, i64 m, i64 k) {     		// 方案1：递归
	if (k == 1) return (m - 1) % n;  		// 第1个出圈的人
	return (solve(n - 1, m, k - 1) + m) % n;// 第k个出圈的人
}

i64 solve2(i64 n, i64 m, i64 k) {    		// 方案2：迭代
	i64 ans = (m - 1) % (n - k + 1);		// 初始化：当剩余n-k+1个人时，第1个出圈的人的位置
	for (i64 i = n - k + 2; i <= n; i++)
		ans = (ans + m) % i;
	return ans;
}

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 T;
	cin >> T;
	while (T--) {
		i64 n, m, k;    // 人数n, 间隔m(从1开始报数)，第k个出圈
		cin >> n >> m >> k;
		cout << solve(n, m, k) << "\n";
	}
	return 0;
}