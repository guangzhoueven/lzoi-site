#include <iostream>
#include <iomanip>
#include <string>
using namespace std;

bool is_pt(int h, int m) {
	string hour = (h < 10 ? "0" : "") + to_string(h);
	string minute = (m < 10 ? "0" : "") + to_string(m);
	return (hour[0] == minute[1]) && (hour[1] == minute[0]);
}

void f_pt(int h, int m) {
	m++;
	if (m == 60) {
		m = 0;
		h++;
		if (h == 24) {
			h = 0;
		}
	}
	while (true) {
		if (is_pt(h, m)) {
			cout << setw(2) << setfill('0') << h << ":"
			     << setw(2) << setfill('0') << m << endl;
			break;
		}
		m++;
		if (m == 60) {
			m = 0;
			h++;
			if (h == 24) {
				h = 0;
			}
		}
	}
}

int main() {
	string time;
	cin >> time;
	int h = stoi(time.substr(0, 2));
	int m = stoi(time.substr(3, 2));
	f_pt(h, m);
	return 0;
}