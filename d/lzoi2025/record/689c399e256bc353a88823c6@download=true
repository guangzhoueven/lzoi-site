#include <bits/stdc++.h>
using namespace std;

using i64 = long long;
template <typename T>  		// C++模板，支持多种数据类型
struct Fenwick {
	int n;
	vector<T> a;        	// 树状数组存储（1-based索引）

	Fenwick(int n_) : n(n_) {
		a.assign(n_ + 2, 0);// 初始化大小为n+2
	}

	void add(int p, T v) {	// 更新操作：不断 p += lowbit(p)，从p点开始，向上更新父节点
		for (; p <= n; p += p & -p) a[p] += v;
	}

	T get(int p) {			// 求前缀和: sum(a[1..p]), 不断 p -= lowbit(p)，从p点开始，累加子节点值
		T ans = 0;
		for (; p > 0; p -= p & -p) ans += a[p];
		return ans;
	}

	T get(int L, int R) {	// 求区间和(1-based): sum(a[1..R]) - sum(a[1..(L-1)])
		return get(R) - get(L - 1);
	}
};

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	int n, m;
	cin >> n >> m;  						// 数列长度n，操作数m

	vector<i64> a(n + 1);  					// 构建数组（1-based）
	Fenwick<i64> diff(n);  					// 差分数组树状数组

	for (int i = 1; i <= n; i++) {
		cin >> a[i];
		diff.add(i, a[i] - a[i - 1]); 		// 初始化差分数组
	}

	while (m--) {							// m 为操作次数
		int op, L, R, k;					// 操作类型op、区间左端点L=x、右端点R=y，添加的值k
		cin >> op;
		if (op == 1) {
			cin >> L >> R >> k;
			diff.add(L, k);  				// 差分数组左端点+k
			diff.add(R + 1, -k);  			// 差分数组右端点+1处-k
		} else {		// op == 2
			cin >> L;	// L = x
			cout << diff.get(L) << "\n";  	// 输出前缀和：m 次操作后的结果
		}
	}

	return 0;
}