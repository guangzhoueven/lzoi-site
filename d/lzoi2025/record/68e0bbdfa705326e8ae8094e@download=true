#include <bits/stdc++.h>
using namespace std;
using i64 = long long;
const i64 MOD = 998244353;

i64 power(i64 x, i64 y) {
	if (y == 0) return 1;						// 第一步：递归终止条件
	if (y == 1) return x % MOD;
	i64 half = power(x, y / 2);					// 第二步：将问题分解成小问题
	i64 res = (half * half) % MOD;
	if (y % 2 == 1) res = (res * x) % MOD;		// 如果 y 是奇数，需要多乘一个 x
	return res;
}

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 x, y;
	cin >> x >> y;
	cout << power(x, y) << "\n";
	return 0;
}