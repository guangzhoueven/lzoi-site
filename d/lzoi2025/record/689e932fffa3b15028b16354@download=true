#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios_base::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	int T;
	cin >> T;
	while (T--) {
		i64 n;
		cin >> n;
		i64 S = n * (n + 1) / 2;
		i64 a = 1;
		i64 sqrtS = sqrt(S);
		for (i64 i = sqrtS; i >= 1; i--) {
			if (S % i == 0) {
				a = i;
				break;
			}
		}
		i64 b = S / a;
		cout << 2 * (a + b) << "\n";
	}
	return 0;
}