#include <bits/stdc++.h>
using namespace std;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	int n, k;
	cin >> n >> k;
	vector<int> a(n);
	for (int i = 0; i < n; i++) cin >> a[i];

	auto solve = [&](int mid) -> bool {
		int cnt = 0;
		for (int i = 0; i < n; i++) {
			if (a[i] > mid) return false;

			int sum = a[i];
			while (i + 1 < n && sum + a[i + 1] <= mid) {
				i++;
				sum += a[i];
			}
			cnt++;
		}
		return cnt <= k;
	};

	int L = 0;
	int R = accumulate(a.begin(), a.end(), 0);	// 累加a所有元素的和
	while (L != R) {
		int mid = L + ((R - L) >> 1);	// 相当于 (L + R) / 2
		if (solve(mid)) R = mid;
		else L = mid + 1;
	}
	cout << L << "\n";
	return 0;
}