#include <bits/stdc++.h>
using namespace std;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	int n, k;
	cin >> n >> k;
	vector<int> a(n);
	for (int i = 0; i < n; i++) cin >> a[i];

	auto solve = [&](int mid) -> bool {
		int cnt = 0;
		for (int i = 0; i < n; i++) {
			int sum = a[i];

			while (sum < mid && i + 1 < n) {
				i++;
				sum += a[i];
			}

			if (sum < mid) return false;
			if (++cnt >= k) return true;
		}
		return cnt >= k;
	};

	int L = 0;
	int R = accumulate(a.begin(), a.end(), 0);	// 累加a所有元素的和
	while (L != R) {
		int mid = (L + R + 1) >> 1;
		if (solve(mid)) L = mid;
		else R = mid - 1;
	}
	cout << L << "\n";
	return 0;
}