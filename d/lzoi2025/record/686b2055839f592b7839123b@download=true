#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
int main() {
	ios::sync_with_stdio(false);
	cin.tie(0);
	cout.tie(0);
	ll n, c, ans = 0;
	cin >> n >> c;
	vector<ll> a(n);
	for (int i = 0; i < n; i++) {
		cin >> a[i];
	}
	sort(a.begin(), a.end(), [&](const auto & x, const auto & y) {
		return x > y;
	});
	for (int i = 0; i < n - 1; i++) {
		for (int j = i + 1; j < n; j++) {
			if (a[i] - a[j] == c) ans++;
		}
	}
	cout << ans << "\n";
	return 0;
}