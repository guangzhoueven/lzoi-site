#include <bits/stdc++.h>
using namespace std;

int main() {
	ios::sync_with_stdio(false);
	cin.tie(0);
	cout.tie(0);
	
	int n, m, L;
	cin >> n >> m >> L;
	
	vector<int> a(n), b(m);
	for (auto &x : a) cin >> x;
	for (auto &x : b) cin >> x;
	
	unordered_set<long long> f;
	while (L--) {
		int x, y;
		cin >> x >> y;
		f.insert(((long long)(x-1)<<32) | (y-1));
	}
	
	auto max_a = max_element(a.begin(), a.end());
	auto max_b = max_element(b.begin(), b.end());
	int idx_a = max_a - a.begin(), idx_b = max_b - b.begin();
	
	if (!f.count(((long long)idx_a<<32) | idx_b)) {
		cout << *max_a + *max_b;
		return 0;
	}
	
	int ans = 0;
	for (int i = 0; i < n; ++i) {
		if (a[i] + *max_b <= ans) continue;
		for (int j = 0; j < m; ++j) {
			if (!f.count(((long long)i<<32) | j))
				ans = max(ans, a[i] + b[j]);
		}
	}
	cout << ans;
	return 0;
}