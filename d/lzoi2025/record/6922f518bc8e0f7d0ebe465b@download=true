#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 T;
	cin >> T;
	while (T--) {
		i64 n, L, R;
		cin >> n >> L >> R;
		vector<i64> a(n);
		for (auto& x : a) cin >> x;

		i64 ans = 0, sum = 0, Lt = 0;
		for (i64 Rt = 0; Rt < n; Rt++) {
			sum += a[Rt];
			while (sum > R && Lt <= Rt) {
				sum -= a[Lt];
				Lt++;
			}
			if (sum >= L && sum <= R) {
				ans++;
				sum = 0;
				Lt = Rt + 1;
			}
		}
		cout << ans << "\n";
	}
	return 0;
}