#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n, m;
	cin >> n >> m;
	vector<i64> c(n);
	for (i64 i = 0; i < n; i++) cin >> c[i];

	sort(c.begin(), c.end());

	i64 L = 0, R = c.back() - c[0], ans = 0;
	while (L <= R) {
		i64 mid = L + ((R - L) >> 1);
		i64 cnt = 1, tmp = c[0];

		for (int i = 1; i < n; i++) {
			if (c[i] - tmp >= mid) {
				cnt++;
				tmp = c[i];
			}
		}

		if (cnt >= m) {
			ans = mid;
			L = mid + 1;
		} else {
			R = mid - 1;
		}
	}
	cout << ans << "\n";
	return 0;
}