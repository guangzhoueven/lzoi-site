
#include <iostream>
using namespace std;
int solve(int n, int m, int k) {
    if (k == 1) {
        return (m - 1) % n;
    }
    return (solve(n - 1, m, k - 1) + m) % n;
}

int main() {
    int T;
    cin >> T;
    while (T--) {
        int n, m, k;
        cin >> n >> m >> k;
        cout << solve(n, m, k) << endl;
    }
    return 0;
}
