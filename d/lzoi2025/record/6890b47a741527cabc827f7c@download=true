#include <bits/stdc++.h>
using namespace std;
int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	int n, m;
	cin >> n >> m;
	vector<string> grid(n);
	for (int i = 0; i < n; i++)	 cin >> grid[i]; //grid[i]为：n 行0~9的字符串

	vector<vector<bool>> visited(n, vector<bool>(m, false)); // 标记状态
	int cnt = 0;
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++) {
			if (grid[i][j] != '0' && !visited[i][j]) {  // 无'0'障碍，可访问状态
				queue<pair<int, int>> q;
				q.push({i, j});			// 把坐标(i,j)入队
				visited[i][j] = true;	// 标记已访问

				while (!q.empty()) {
					auto [x, y] = q.front();
					q.pop();
					vector<int> dx = {-1, 1, 0, 0};
					vector<int> dy = {0, 0, -1, 1};
					for (int k = 0; k < 4; k++) {
						int nx = x + dx[k], ny = y + dy[k];
						// 边界检查
						if (nx >= 0 && nx < n && ny >= 0 && ny < m && grid[nx][ny] != '0' && !visited[nx][ny]) {
							visited[nx][ny] = true;
							q.push({nx, ny});
						}
					}
				}
				cnt++;
			}
		}
	}
	cout << cnt << "\n";
	return 0;
}