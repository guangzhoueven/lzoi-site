#include <bits/stdc++.h>
using namespace std;

struct Pair {
    int a, b;
    bool operator==(const Pair& o) const {
        return a == o.a && b == o.b;
    }
};

struct HashPair {
    size_t operator()(const Pair& p) const {
        return hash<int>()(p.a) ^ hash<int>()(p.b);
    }
};

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    
    int n, m, k;
    cin >> n >> m >> k;
    
    vector<pair<int, int>> A(n), B(m);
    for (int i = 0; i < n; ++i) {
        cin >> A[i].first;
        A[i].second = i + 1;
    }
    for (int i = 0; i < m; ++i) {
        cin >> B[i].first;
        B[i].second = i + 1;
    }
    
    unordered_set<Pair, HashPair> bad;
    for (int i = 0; i < k; ++i) {
        int x, y;
        cin >> x >> y;
        bad.insert({x, y});
    }
    
    sort(A.begin(), A.end(), [](auto& x, auto& y) { return x.first > y.first; });
    sort(B.begin(), B.end(), [](auto& x, auto& y) { return x.first > y.first; });
    
    int res = 0;
    const int lim = 100;
    for (int i = 0; i < min(lim, n); ++i) {
        for (int j = 0; j < min(lim, m); ++j) {
            if (!bad.count({A[i].second, B[j].second})) {
                res = max(res, A[i].first + B[j].first);
            }
        }
    }
    
    cout << res << endl;
    return 0;
}