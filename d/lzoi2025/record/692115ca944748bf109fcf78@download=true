#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n, m, ans = 0;
	cin >> n >> m;
	vector<i64> a(n);
	for (auto& x : a ) cin >> x;
	for (i64 l = 0, r = 0; l < n; l++) {
		r = max(r, l + 1);
		while (r < n && a[r] - a[l] < m) r++;
		ans += n - r;
	}
	cout << ans << "\n";
	return 0;
}