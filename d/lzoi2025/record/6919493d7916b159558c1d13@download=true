#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n;
	cin >> n;
	vector<i64> a(n);
	for (auto& x : a) cin >> x;

	i64 buy = LLONG_MIN, sell = 0;
	for (i64 i = 0; i < n; i++) {
		buy = max(buy, 0 - a[i]);
		sell = max(sell, buy + a[i]);
	}
	cout << sell << "\n";
	return 0;
}