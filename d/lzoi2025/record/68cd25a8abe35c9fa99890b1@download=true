#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	i64 T;
	cin >> T;
	while (T--) {
		i64 n, m;
		cin >> n >> m;
		vector<i64> a(n);
		for (i64 i = 0; i < n; i++) cin >> a[i];

		bool ok = true;
		for (i64 i = 0; i < (n >> 1); i++) {
			if (a[i] != a[n - 1 - i]) {
				ok = false;
				break;
			}
		}
		if (ok) {cout << "YES" << "\n";	continue;}
		if (m == n) {cout << "NO" << "\n";continue;}
		i64 cnt = 0;
		for (i64 i = 0; i < (n >> 1); i++) cnt += a[n - 1 - i] - a[i];

		if (m % 2 == 1) cout << "YES" << "\n";
		else {
			if (n % 2 == 1) cout << "YES" << "\n";
			else {
				if (cnt % 2 == 0) cout << "YES" << "\n";
				else cout << "NO" << "\n";
			}
		}
	}
	return 0;
}