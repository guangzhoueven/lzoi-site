#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 T, n, k, m;  // 人数n, 起始k, 间隔m
	cin >> T;
	while (T-- && cin >> n >> k >> m) {
		i64 ans = 0; // 幸存者初始位置
		// 约瑟夫环数学递推公式：f(n) = (f(n-1) + m) % n
		// 从2个人开始递推到n个人
		for (i64 i = 2; i <= n; i++)
			ans = (ans + m) % i;  		// 计算i个人时的幸存者位置
		cout << (ans + k) % n << "\n";  // 起始位+偏移量k，取模n
	}
	return 0;
}