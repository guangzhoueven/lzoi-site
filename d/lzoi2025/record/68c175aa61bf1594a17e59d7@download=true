#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n;
	cin >> n;
	vector<i64> h(n), p;
	for (i64 i = 0; i < n; i++) cin >> h[i];

	for (i64 x : h) {
		auto it = lower_bound(p.begin(), p.end(), x);
		if (it == p.end()) p.push_back(x);
		else *it = x;
	}
	cout << p.size() << "\n";
	return 0;
}