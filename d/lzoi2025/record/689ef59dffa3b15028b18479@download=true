#include <bits/stdc++.h>
using namespace std;
using i64 = long long;
//const i64 MAXN = 1e+18;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	int T;
	cin >> T;
	while (T--) {
		i64 a, b;
		cin >> a >> b;
//		srand((unsigned int)time(NULL));	// 构造随机整数
//		i64 tmp = rand() % MAXN + 1;		// 1~MAXN内随机整数（哎！老师的测试数据不支持！^_^）
		int tmp = b;
		i64 c = 3 * a - b - tmp; 			// 数组长度为奇数
		cout << "3\n";
		cout << tmp << " " << b << " " << c << "\n";
	}
	return 0;
}