#include <bits/stdc++.h>
using namespace std;
using i64 = long long;
const i64 MOD = 998244353;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n, ans = 0;
	cin >> n;
	vector<i64> a(n);
	for (auto& x : a) cin >> x;

	sort(a.begin(), a.end());
	vector<i64> p(n + 1);
	p[0] = 1;
	for (i64 i = 1; i <= n; i++)
		p[i] = p[i - 1] * 2 % MOD;

	for (i64 i = 0; i < n; i++)
		ans = (ans + a[i] * (p[i] - p[n - i - 1])) % MOD;

	cout << (ans + MOD) % MOD << "\n";
	return 0;
}