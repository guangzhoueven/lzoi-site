#include <bits/stdc++.h>
using namespace std;
using i64 = long long;
const i64 MOD = 1e9+7;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n, m;
	cin >> n >> m;
	vector<i64> a(n + 1), p(n + 1);
	for (i64 i = 1; i <= n; i++) cin >> a[i];

	p[1] = 1;
	multiset<i64> s;
	s.insert(a[1]);

	for (i64 i = 2; i <= n; i++) {
		i64 l = p[i - 1];
		s.insert(a[i]);
//		s.rbegin() 相当于 prev(s.end());
//		s.begin()  相当于 next(s.end());
		// ↓↓↓只删除一个，相当于s.erase(s.find(a[l++]))，因为是multiset，所以不能直接erase
		while (*s.rbegin() - *s.begin() > m) s.extract(a[l++]);
		p[i] = l;
	}
	vector<i64> dp(n + 1), f(n + 1);
	dp[0] = 1, f[0] = 1;

	for (i64 i = 1; i <= n; i++) {
		i64 l = p[i] - 1, r = i - 1;
		dp[i] = f[r];
		if (l - 1 >= 0) dp[i] = (dp[i] - f[l - 1] + MOD) % MOD;
		f[i] = (f[i - 1] + dp[i] + MOD) % MOD;
	}
	cout << dp[n] << "\n";
	return 0;
}