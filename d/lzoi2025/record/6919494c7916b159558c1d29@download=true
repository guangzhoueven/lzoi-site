#include <bits/stdc++.h>
using namespace std;
using i64 = long long;

int main() {
	ios::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
	i64 n;
	cin >> n;
	vector<i64> a(n);
	for (auto& x : a) cin >> x;
	
	i64 ans = 0;
	for (i64 i = 1; i < n; i++) 					// 把所有正收益累加起来就是最大利润
		if (a[i] > a[i-1]) ans += a[i] - a[i-1];  	// 只要今天股价>昨天股价，就在昨天买入,今天卖出
	
	cout << ans << "\n";
	return 0;
}