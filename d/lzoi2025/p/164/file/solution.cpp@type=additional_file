#include <bits/stdc++.h>
using namespace std;

using i64 = long long;
const int P = 998244353;

int solve(vector<int>& a) {
    int n = a.size();
    sort(a.begin(), a.end());
    
    vector<int> b(n, 1);
    for (int i = 1; i < n; i++) b[i] = b[i - 1] * 2 % P;

    i64 ans = 0;
    for (int i = 0; i < n; i++) {
        ans = (ans + (i64) a[i] * b[i] - (i64) a[i] * b[n - 1 - i]) % P;
    }
    return ans;
}

int main() {	
    ios::sync_with_stdio(false);
    cin.tie(0); cout.tie(0);

    int n;
    cin >> n;
    vector<int> a(n);
    for (int i = 0; i < n; i++) cin >> a[i];
    cout << solve(a) << '\n';

    return 0;
}
