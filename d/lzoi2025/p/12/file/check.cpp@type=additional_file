#include <iostream>
#include <vector>
using namespace std;

int main() {
	int T, n, k, m;
    cin >> T;
    while (T--) {
        cin >> n >> m >> k;
        vector<int> a(n);
        for (int i = 0; i < n; i++) {
            a[i] = i;
        }
        int t = n, index = 0, cnt = 0;
        while (t > 0) {
            index = (index + m - 1) % t;
            if (++cnt == k) {
                cout << a[index] << '\n';
                break;
            }
            a.erase(a.begin() + index);
            t--;
        }
    }
	return 0;
}