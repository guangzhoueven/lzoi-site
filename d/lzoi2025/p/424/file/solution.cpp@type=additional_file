#include <bits/stdc++.h>
using namespace std;

using i64 = long long;

i64 solve(vector<int>& a, int l, int r) {
    int n = a.size();
    i64 ans = 0;

    sort(a.begin(), a.end());
    for (int i = 0; i < n; i++) {
        int u = lower_bound(a.begin() + i + 1, a.end(), l - a[i]) - a.begin();
        int v = upper_bound(a.begin() + i + 1, a.end(), r - a[i]) - a.begin();
        ans += v - u; 
    }

    return ans;
}

int main() {	
    ios::sync_with_stdio(false);
    cin.tie(0); cout.tie(0);
    
    int n, l, r;
    cin >> n >> l >> r;
    vector<int> a(n);
    for (int i = 0; i < n; i++) cin >> a[i];
    cout << solve(a, l, r) << '\n';

    return 0;
}