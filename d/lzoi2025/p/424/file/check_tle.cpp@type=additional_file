#include <bits/stdc++.h>
using namespace std;

using i64 = long long;

i64 solve(vector<int>& a, int L, int R) {
    int n = a.size();
    i64 ans = 0;

    for (int l = 0; l < n; l++) {
        for (int r = l + 1; r < n; r++) {
            int sum = a[l] + a[r];
            if (L <= sum && sum <= R) ans++;
        }
    }
    return ans;
}

int main() {	
    ios::sync_with_stdio(false);
    cin.tie(0); cout.tie(0);
    
    int n, l, r;
    cin >> n >> l >> r;
    vector<int> a(n);
    for (int i = 0; i < n; i++) cin >> a[i];
    cout << solve(a, l, r) << '\n';

    return 0;
}