#include <bits/stdc++.h>
using namespace std;

using i64 = long long;
using pii = pair<int, int>;
const int P = 1000000007;

int solve(vector<int>& a, int n, int k) {
    vector<int> dp(n + 1, 0);  // dp(i): 前 i 个数的方案数
    vector<int> f(n + 1, 0);   // dp(i) 的前缀和
    dp[0] = 1, f[0] = 1;
    set<pii> s;
    for (int i = 1, p = 1; i <= n; i++) {
        s.insert({a[i - 1], i - 1});
        while (s.rbegin()->first - s.begin()->first > k) {
            s.erase({a[p - 1], p - 1});
            p++;
        }
        if (p == 1) dp[i] = f[i - 1];
        else dp[i] = (f[i - 1] - f[p - 2] + P) % P;
        f[i] = (f[i - 1] + dp[i]) % P;
    }
    return dp[n];
}

int main() {	
    ios::sync_with_stdio(false);
    cin.tie(0); cout.tie(0);
    
    int n, k;
    cin >> n >> k;
    vector<int> a(n);
    for (int i = 0; i < n; i++) cin >> a[i];
    cout << solve(a, n, k) << '\n';

    return 0;
}