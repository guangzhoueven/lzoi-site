#include <bits/stdc++.h>
using namespace std;

using i64 = long long;

int main() {
	ios::sync_with_stdio(false);
	cin.tie(nullptr); cout.tie(nullptr);
	
	i64 T, n;
	cin >> T;
	while (T--) {
		cin >> n;
		i64 m = (n + 1) * n / 2, ans = -1;
		for (i64 i = 1; i * i <= m; i++) if (m % i == 0) {
			i64 tmp = (i + m / i) * 2;
			if (ans == -1 || tmp < ans) ans = tmp;
		}
		cout << ans << '\n';
	}
	return 0;
}