#include <bits/stdc++.h>
using namespace std;

int main() {
	int T, a, b;
	cin >> T;
	while (T--) {
		cin >> a >> b;
		vector<int> w({-1000, b, 1000});
		int x = 3 * a - b;
		if (x >= 0)
			w[2] += x;
		else
			w[0] += x;
		cout << 3 << "\n";
		for (int i = 0; i < 3; i++)
			cout << w[i] << " \n"[i + 1 == 3];
	}
	return 0;
}