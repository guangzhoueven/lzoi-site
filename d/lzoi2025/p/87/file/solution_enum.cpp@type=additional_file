#include <bits/stdc++.h>
using namespace std;

using i64 = long long;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr); cout.tie(nullptr);

    int n, m;
    cin >> n >> m;
    vector<vector<int>> a(2, vector<int>(n));
    for (int i = 0; i < n; i++) cin >> a[0][i] >> a[1][i];

    int ans = 0;
    for (int st = 0; st < (1 << n); st++) {
        int tmp = 0, cnt = 0;
        for (int i = 0; i < n; i++) {
            int id = st >> i & 1;
            tmp += a[id][i], cnt += id;
        }
        if (cnt == n - m) ans = max(ans, tmp);
    }
    cout << ans << '\n';

    return 0;
}
