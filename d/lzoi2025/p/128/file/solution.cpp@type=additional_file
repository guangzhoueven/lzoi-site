#include <bits/stdc++.h>
using namespace std;

int T, n, m;
vector<int> a;

bool gao() {
    bool f = true;
    for (int i = 1, j = n; i <= j; i++, j--) if (a[i] != a[j]) {
        f = false;
        break;
    }
    if (f) return true;
    if (n == m) return f;
    if (m % 2 || n % 2) return true;
    int ans = 0;
    for (int i = 1, j = n; i <= j; i++, j--) {
        ans = (ans + abs(a[i] - a[j])) % 2;
    }
    return ans == 0;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(0); cout.tie(0);

	cin >> T;
	while (T--) {
        cin >> n >> m;
        a = vector<int>(n + 1);
        for (int i = 1; i <= n; i++) cin >> a[i];
        cout << (gao() ? "YES" : "NO") << '\n';
	}
	return 0;
}