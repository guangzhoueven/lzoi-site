#include <bits/stdc++.h>
using namespace std;

int main() {

	int n, m;
	cin >> n >> m;
	vector<int> a(n);
	for (int i = 0; i < n - 1; i++) cin >> a[i];

	int ans = -1;
	for (int i = 0; i <= 100; i++) {
		vector<int> b = a;
		b[n - 1] = i;
		sort(b.begin(), b.end());
		int sum = 0;
		for (int j = 1; j < n - 1; j++) sum += b[j];
		if (sum >= m) {
			ans = i;
			break;
		}
	}
	cout << ans << '\n';
	return 0;
}