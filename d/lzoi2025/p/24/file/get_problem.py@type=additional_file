params = {
    'noTemplate': '1',
}

def get_problem(problem_url):
    response = requests.get(problem_url, params=params, cookies=cookies, headers=headers)
    data = json.loads(response.text)
    return json.loads(data['pdoc']['content'])['zh']


problem_url = 'https://hydro.ac/d/topoac/p/CSP1300'
zh = get_problem(problem_url)
print(zh)
