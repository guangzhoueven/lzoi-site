#include <bits/stdc++.h>

using namespace std;

const int inf = 0x3f3f3f3f;

int main() {
  ios::sync_with_stdio(false);
  cin.tie(nullptr);

  int n, k;
  cin >> n >> k;
  vector<int> a(n + 1);
  for (int i = 1; i <= n; i++) cin >> a[i];
  int ret = 0;
  vector<int> dp(n + 1), g(n + 1, inf);
  for (int i = 1; i <= n; i++) {
    int x = -(a[i] - i * k);
    dp[i] = upper_bound(g.begin() + 1, g.end(), x) - g.begin();
    g[dp[i]] = x;
    ret = max(ret, dp[i]);
  }
  cout << n - ret << '\n';


  return 0;
}