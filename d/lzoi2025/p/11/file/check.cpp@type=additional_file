#include <iostream>
#include <vector>
using namespace std;

int main() {
	int T, n, k, m;
    cin >> T;
    while (T--) {
        cin >> n >> k >> m;
        vector<int> a(n);
        for (int i = 0; i < n; i++) {
            a[i] = i;
        }
        int t = n, index = k;
        while (t > 1) {
            index = (index + m - 1) % t;
            a.erase(a.begin() + index);
            t--;
        }
        if (a.size()) {
            cout << a[0] << '\n';
        }
    }
	return 0;
}