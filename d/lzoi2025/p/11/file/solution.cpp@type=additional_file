#include <bits/stdc++.h>
using namespace std;

// n 个人(0, 1, ..., n - 1), 从 0 开始报数, 每 m 个出圈 1 个
int solve(int n, int m) {
	// 终止逻辑
	if (n == 1) return 0;
	
	// 分解为规模更小的问题
	return (solve(n - 1, m) + m) % n;
}

int main() {
	int T, n, k, m;
	cin >> T;
	while (T--) {
		cin >> n >> k >> m;
		cout << (solve(n, m) + k) % n << '\n';
	}
	return 0;
}